<?xml version="1.0" encoding="ISO-8859-1"?>

<agents>
	<!-- A list of agents and their behavior classes -->
	
	<!-- #### DELIBERATIVE AGENTS ### -->
	<agent name="deliberative-random">
		<set class-path="bin/"/>
		<set class-name="deliberative.DeliberativeTemplate"/>
		<set algorithm="BFS"/>
	</agent>

	<agent name="deliberative-main">
		<set class-path="bin/"/>
		<set class-name="deliberative.DeliberativeMain"/>
		<set algorithm="A-star"/>
		<set heuristic="minCarriedPlusMinAvailable"/>
	</agent>

	<agent name="deliberative-bfs">
		<set class-path="bin/"/>
		<set class-name="deliberative.DeliberativeMain"/>
		<set algorithm="BFS"/>
	</agent>

	<agent name="deliberative-astar">
		<set class-path="bin/"/>
		<set class-name="deliberative.DeliberativeMain"/>
		<set algorithm="A-star"/>
		<set heuristic="minCarriedPlusMinAvailable"/>
	</agent>

	<agent name="deliberative-astar-zero">
		<set class-path="bin/"/>
		<set class-name="deliberative.DeliberativeMain"/>
		<set algorithm="A-star"/>
		<set heuristic="zeroHeuristic"/>
	</agent>
	
</agents>
